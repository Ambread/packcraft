{
    "include": ["src"],
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",

        // Correctness
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,

        // Distribution
        "outDir": "lib",
        "declaration": true,
        "declarationMap": true
    }
}
